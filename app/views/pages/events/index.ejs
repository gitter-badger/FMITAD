<!DOCTYPE html>
<html lang="en">
    <head>
        <% title="Events" %>
        <% include ../../partials/head %>
    </head>

    <body>

        <% include ../../partials/header %>

        <!-- Page Content -->
        <div class="container">
            <div class="jumbotron">
                <h2>Events.</h2>

                <!-- If the user is logged in -->
                <% if (typeof user != "undefined") { %>
                    <div class="row">

                        <div class="col-xs-4 col-sm-4">
                            <a href="/events/create" class="btn btn-primary">Create new event</a>
                        </div>

                        <% if (user.currentEvent) { %>
                            <div class="col-xs-4 col-sm-4">
                                <a href="/events/<%= user.currentEvent %>" class="btn btn-success">My event</a>
                            </div>
                        <% } %>
                    </div>
                <% } %>
                <!-- End if -->
                <div class="col-xs-4 col-sm-4">
                    <button id="event-add-more" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span></button>
                </div>

            </div>

            <div id="placeholder1"></div>

            <div class="panel-group row" id="user-panels">

            </div>

            <!--	TEMPLATE FOR PANELS
            <div class="col-xs-6 col-sm-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Graph</h3>
                    </div>
                    <div class="panel-body">
                        <img src="http://dummyimage.com/600x500/000/fff&amp;text=Graph" class="img-responsive">
                    </div>
                </div>
            </div>
            -->

            <div id="eventModal" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                            <h4 class="modal-title"></h4>
                        </div>
                        <div class="modal-body">

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button id="joinEventBtn" type="button" class="btn btn-primary">Request to join</button>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->

        </div>
        <!-- /.container -->

        <% include ../../partials/footer %>

        <script src="/js/custom/pages/events.js"></script>
        <!-- /.container -->
    </body>
</html>
